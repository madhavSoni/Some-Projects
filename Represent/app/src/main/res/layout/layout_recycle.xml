<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/parent_layout"
    android:background="@drawable/layout_border_sen">


    <ImageView
        android:id="@+id/image"
        android:layout_width="165dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_sen_rep"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/website"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Mark Thompson"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image_name"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Contact"
        android:textColor="#0000EF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/image_name" />

    <TextView
        android:id="@+id/website"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Website"
        android:textColor="#0000EF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/contact" />

    <TextView
        android:id="@+id/moreinfo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/image_name"
        android:layout_alignTop="@+id/image"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="More Info"
        android:textColor="#0000EF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/website" />

</android.support.constraint.ConstraintLayout>